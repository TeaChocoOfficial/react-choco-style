{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "dist",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "importHelpers": true,
        "isolatedModules": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
