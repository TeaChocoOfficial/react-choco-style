{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["dom", "esnext"],
        "jsx": "react-jsx",
        "declaration": true,
        "declarationDir": "./dist/types",
        "strict": true,
        "paths": {
            "@teachoco-official/react-choco-style": ["./src/index.ts"]
        },
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "importHelpers": true,
        "isolatedModules": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
